{% extends 'admin/admin.html.twig' %}

{% block title "Administration" %}


{% block body %}
<div class="text">Administration des sous-rubriques</div>
<div class="row">
<table class="table table-dark bdr">
    <thead>
    <tr>
        <th>Titre</th>
        <th>Rubrique</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for sousRubrique in sousRubriques %}
    <tr>
        <td>  
            <a class="libelle" href="{{ path('app_admin_sousRubrique_edit', {id: sousRubrique.id}) }}" style="text-decoration:none">{{ sousRubrique.getNom }}</a>
        </td>
        <td> {{ sousRubrique.Rubrique.nom | default('') }} </td>
        <td>    
               <div class="d-flex gap-1">
                {#<a class="btn btn-primary btn-sm" href="{{ path('app_admin_produit_edit', { id: produit.id }) }}">Éditer</a> #}
            <li class="action1">
              <a class="edit" href="{{ path('app_admin_sousRubrique_edit', { id: sousRubrique.id }) }}">
                  <i class='bx bxs-wrench' style="align-self:center"></i>
              </a>
            </li>
                <form class="action" action="{{ path('app_admin_sousRubrique_delete' , {id: sousRubrique.id}) }}" method="post">
                    <input type="hidden" name="_method" value="DELETE">
            <li class="action2">
              <button class="action" type="submit">
                  <i class='bx bxs-trash'></i>
              </button>
              </a>
            </li>
                </form>          
           </div>
        </td>
    </tr>
    {% endfor %}
    </tbody>
    </table>
<p>
    <a class="btn btn-primary btn-sm" href="{{ path('app_admin_sousRubrique_create') }}">Créer une nouvelle sous-rubrique</a>
</p>
</div>
{% endblock %}
