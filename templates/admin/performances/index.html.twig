{% extends 'admin/admin.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}
{{ encore_entry_script_tags('app9')}}
{{ encore_entry_script_tags('app10')}}
{{ encore_entry_script_tags('app11')}}
<div class="text">Performances de Village Green<hr>
<p>Vous trouverez sur cette page, des indicateurs de performances de l'entreprise.</p>
</div>
<div class="row">
<p class="text">listes des produits vendus par fournisseur des commandes standards :</p>
<table class="table table-dark bdr">
    <thead>
    <tr>
        <th>Nom du produit</th>
        <th>Fournisseur du produit</th>
        <th>Nombre de fois acheté</th>
        <th>Revenu du produit</th>
    </tr>
    </thead>
    <tbody>
    {% for produit in listeProduitVendu %}
    <tr>
        <td>  
            {{produit.nom}}
        </td>
        <td>{{produit.nomFournisseur}}
        <td>{{produit.1}}
        </td>
        <td>{{produit.2|number_format(2,'.',' ')}} €
        </td>
    </tr>
    {% endfor %}
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3">Total</td>
            <td colspan="2">{{ total[0][1]|number_format(2,'.',' ') }} €</td>
        </tr>

    
    </table>
    <p class="text">listes des produits vendus par fournisseur des commandes spéciales :</p>
    <table class="table table-dark bdr">
    <thead>
    <tr>
        <th>Nom du produit</th>
        <th>Fournisseur du produit</th>
        <th>Nombre de fois acheté</th>
        <th>Coefficient de la commande </th>
        <th>Réduction </th>
        <th>Revenu du produit</th>
    </tr>
    </thead>
    <tbody>
    {% for produit in listeProduitVenduReduc %}
    <tr>
        <td>  
            {{produit.nom}}
        </td>
        <td>{{produit.nomFournisseur}}
        <td>{{produit.1}}
        </td>
        <td>{{produit.coefficient}}</td>
        <td>{{produit.reduction}}</td>
        <td>{{produit.2|number_format(2,'.',' ')}} €
        </td>
    </tr>
    {% endfor %}
    </tbody>
    <tfoot>
        <tr>
            <td colspan="5">Total</td>
            <td colspan="1">{{ total1[0][1]|number_format(2,'.',' ') }} €</td>
        </tr>

    
    </table>
    <p class="text">Part des revenus par fournisseur :</p>
    <div class="row" id="root_app9"></div>
    <p class="text">Tableau listant l'ensemble des commandes : </p>
    <div class="row" id="root_app10"></div>
    <p class="text">Chiffres d'affaires par mois pour l'année {{"now"|date("Y")}} </p>
    <div class="row" id="root_app11"></div>
</div>
{% endblock %}
