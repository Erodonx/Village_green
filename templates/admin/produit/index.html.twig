{% extends 'admin/admin.html.twig' %}

{% block title "Administration" %}

{% block body %}
<div class="text">Administration des produits</div>
<div class="row">
<table class="table table-dark bdr">
    <thead>
    <tr>
        <th>Nom du produit</th>
        <th>Stock</th>
        <th>Nom fournisseur</th>
        <th>Sous-rubrique</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for produit in produits %}
    <tr>
        <td>  
            <a class="libelle" href="{{ path('app_admin_produit_edit', { id: produit.getId  }) }}">{{ produit.getNom }}</a>
        </td>
        <td>{{produit.stock}}
        </td>
        <td>{{produit.Fournisseur.nom}}
        </td>
        <td>{{ produit.sousRubrique.nom | default('') }}</td>
        <td> 
            <div class="d-flex gap-1">
                {#<a class="btn btn-primary btn-sm" href="{{ path('app_admin_produit_edit', { id: produit.id }) }}">Éditer</a> #}
            <li class="action1">
              <a class="edit" href="{{ path('app_admin_produit_edit', { id: produit.id }) }}">
                  <i class='bx bxs-wrench' style="align-self:center"></i>
              </a>
            </li>
                <form class="action" action="{{ path('app_admin_produit_delete' , {id: produit.id}) }}" method="post">
                    <input type="hidden" name="_method" value="DELETE">
            <li class="action2">
              <button class="action" type="submit">
                  <i class='bx bxs-trash'></i>
              </button>
              </a>
            </li>
                </form>          
           </div>
        </td>
    </tr>
    {% endfor %}
    </tbody>
    </table>
<p>
    <a class="btn btn-primary btn-sm" href="{{ path('app_admin_produit_create') }}">Créer un nouveau produit</a>
</p>
</div>
{% endblock %}
