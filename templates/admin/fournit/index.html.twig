{% extends 'admin/admin.html.twig' %}

{% block title "Administration" %}

{% block body %}
<div class="text">Administration des commandes fournisseurs</div>
<div class="row">
<table class="table table-dark bdr">
    <thead>
    <tr>
        <th>Id de la commande</th>
        <th>Nom du produit</th>
        <th>Quantité commandé</th>
        <th>Nom du fournisseur</th>
        <th>Type Fournisseur</th>
        <th>Date de livraison de la commande</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for fourni in fournit %}
    <tr>
        <td>  
        <a class="id" href="">{{ fourni.getId }}</a>
        </td>
        <td>{{ fourni.Produit.getNom | default('') }}</td>
        <td>{{fourni.getQuantiteLivree}}</td>
        <td>{{ fourni.Fournisseur.getNom | default('')}}</td>
        <td>{{ fourni.Fournisseur.getType}}</td>
        <td>{{ fourni.getDateLivraison | date('d/m/y')}}</td>
        <td>         <div class="d-flex gap-1">
            <li class="action1">
              <a class="edit" href="{{ path('app_admin_commande_fournisseur_edit', { id: fourni.id }) }}">
                  <i class='bx bxs-wrench' style="align-self:center"></i>
              </a>
            </li>
                <form class="action" action="{{ path('app_admin_commande_fournisseur_delete' , {id: fourni.id}) }}" method="post">
                    <input type="hidden" name="_method" value="DELETE">
            <li class="action2">
              <button class="action" type="submit">
                  <i class='bx bxs-trash'></i>
              </button>
              </a>
            </li>
                </form>          
           </div>
    </tr>
    {% endfor %}
    </tbody>
    </table>
<p>
    <a class="btn btn-primary btn-sm" href="{{ path('app_admin_commande_fournisseur_create') }}">Passer une nouvelle commande fournisseur</a>
</p>
</div>
{% endblock %}

